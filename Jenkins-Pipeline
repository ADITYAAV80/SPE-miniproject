pipeline {
    agent any

    triggers {
          githubPush()
       }

    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/ADITYAAV80/SPE-miniproject.git'
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'master', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    docker.withRegistry('', 'dockerhub_credentials') {
                    sh 'docker tag calculator adityaav80/calculator:latest'
                    sh 'docker push adityaav80/calculator'
                    }
                 }
            }
        }

	stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory.ini'
                     )
                }
            }
        }

    }

    post {
        success {
            emailext (
                subject: 'SUCCESS: Pipeline ${JOB_NAME} - Build #${BUILD_NUMBER}',
                body: '''The pipeline ${JOB_NAME} - Build #${BUILD_NUMBER} was successful.
                Check the build details at: ${BUILD_URL}''',
                to: 'adityaav80@gmail.com'
            )
        }
        failure {
            emailext (
                subject: 'FAILURE: Pipeline ${JOB_NAME} - Build #${BUILD_NUMBER}',
                body: '''The pipeline ${JOB_NAME} - Build #${BUILD_NUMBER} has failed.
                Check the build details at: ${BUILD_URL}''',
                to: 'adityaav80@gmail.com'
            )
        }
    }
}
